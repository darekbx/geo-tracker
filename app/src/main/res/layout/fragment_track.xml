<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:viewBindingIgnore="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/label_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/colorPrimary">
        <TextView
            android:id="@+id/value_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/value_label"
            android:ellipsize="end"
            android:padding="@dimen/padding_medium"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            tools:text="Label"
            />
        <TextView
            android:id="@+id/value_label_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:ellipsize="end"
            android:padding="@dimen/padding_small"
            style="@style/default_label"
            tools:text="id: 3"
            />
        <ImageView
            android:id="@+id/image_label_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/value_label"
            app:layout_constraintBottom_toBottomOf="@id/value_label"
            app:layout_constraintStart_toEndOf="@id/value_label"
            android:src="@drawable/ic_edit"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/summary_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/label_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/padding_medium"
        android:paddingTop="@dimen/padding_medium"
        android:paddingBottom="@dimen/padding_medium"
        android:background="@drawable/bg_round_corners">
        <TextView
            android:id="@+id/label_trip_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trip_time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingStart="@dimen/padding_medium"
            android:paddingEnd="0dp"
            />

        <TextView
            android:id="@+id/value_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2020-05-25"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/label_trip_time"
            app:layout_constraintEnd_toStartOf="@id/label_trip_from"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintHorizontal_bias="0"
            android:paddingEnd="@dimen/padding_tiny"
            android:paddingStart="@dimen/padding_medium"
            style="@style/default_label_value"
            />
        <TextView
            android:id="@+id/label_trip_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trip_from"
            app:layout_constraintBottom_toBottomOf="@id/value_date"
            app:layout_constraintStart_toEndOf="@id/value_date"
            app:layout_constraintEnd_toStartOf="@id/value_start_time"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:paddingEnd="@dimen/padding_tiny"
            />
        <TextView
            android:id="@+id/value_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="13:00:00"
            app:layout_constraintTop_toBottomOf="@id/label_trip_time"
            app:layout_constraintStart_toEndOf="@id/label_trip_from"
            app:layout_constraintEnd_toStartOf="@id/label_trip_to"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:paddingEnd="@dimen/padding_tiny"
            android:paddingStart="0dp"
            style="@style/default_label_value"
            />
        <TextView
            android:id="@+id/label_trip_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trip_to"
            app:layout_constraintBottom_toBottomOf="@id/value_date"
            app:layout_constraintStart_toEndOf="@id/value_start_time"
            app:layout_constraintEnd_toStartOf="@id/value_end_time"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:paddingEnd="@dimen/padding_tiny"
            />
        <TextView
            android:id="@+id/value_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="16:00:00"
            app:layout_constraintTop_toBottomOf="@id/label_trip_time"
            app:layout_constraintStart_toEndOf="@id/label_trip_to"
            app:layout_constraintEnd_toStartOf="@id/value_time"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:paddingEnd="@dimen/padding_tiny"
            android:paddingStart="0dp"
            style="@style/default_label_value"
            />

        <TextView
            android:id="@+id/value_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="(1h 20m)"
            app:layout_constraintBottom_toBottomOf="@id/value_date"
            app:layout_constraintStart_toEndOf="@id/value_end_time"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/padding_medium"
            />

        <TextView
            android:id="@+id/label_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/distance"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/value_date"
            android:paddingStart="@dimen/padding_medium"
            android:paddingTop="@dimen/padding_small"
            />
        <TextView
            android:id="@+id/value_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="15.43km"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/label_distance"
            android:paddingEnd="@dimen/padding_tiny"
            android:paddingStart="@dimen/padding_medium"
            style="@style/default_label_value"
            />

        <TextView
            android:id="@+id/value_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="(10 points)"
            app:layout_constraintBottom_toBottomOf="@id/value_distance"
            app:layout_constraintStart_toEndOf="@id/value_distance"
            android:paddingEnd="@dimen/padding_medium"
            android:paddingStart="0dp"
            android:paddingTop="@dimen/padding_small"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/speed_view_container"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/summary_container"
        app:layout_constraintBottom_toTopOf="@id/altitude_view_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/padding_medium"
        android:background="@drawable/bg_round_corners">
        <com.darekbx.geotracker.ui.track.SpeedView
            android:id="@+id/speed_view"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/altitude_view_container"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/speed_view_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/padding_medium"
        android:background="@drawable/bg_round_corners">
        <com.darekbx.geotracker.ui.track.AltitudeView
            android:id="@+id/altitude_view"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            />
    </FrameLayout>

    <org.osmdroid.views.MapView
        android:id="@+id/map"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/padding_medium"
        app:layout_constraintTop_toBottomOf="@id/altitude_view_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fix_data_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/overlapping_button"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/padding_large"
        android:layout_marginBottom="@dimen/padding_medium"
        android:src="@drawable/ic_fix"
        android:visibility="gone"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/overlapping_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/clear_points_button"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/padding_large"
        android:layout_marginBottom="@dimen/padding_medium"
        android:src="@drawable/ic_map"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/clear_points_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/edit_track_button"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/padding_large"
        android:layout_marginBottom="@dimen/padding_medium"
        android:src="@drawable/ic_cancel_map"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/edit_track_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/padding_large"
        android:src="@drawable/ic_edit"
        android:tint="@android:color/white"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
