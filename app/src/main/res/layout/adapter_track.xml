<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View" />
        <variable name="track" type="com.darekbx.geotracker.model.Track" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/row_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/track_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingStart="@dimen/padding_medium"
            android:paddingTop="@dimen/padding_medium"
            android:text="@{track.label}"
            android:textColor="@android:color/black"
            tools:text="Label"
            />
        <TextView
            android:id="@+id/track_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/track_label"
            android:paddingStart="@dimen/padding_medium"
            android:paddingTop="@dimen/padding_medium"
            android:text="@{@string/distance_format(track.distance)}"
            tools:text="10.56km"
            />
        <TextView
            android:id="@+id/track_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingTop="@dimen/padding_medium"
            android:paddingEnd="@dimen/padding_medium"
            android:text="@{@string/start_format(track.startTimestamp)}"
            tools:text="Start: 2020-05-25 12:00"
            />
        <TextView
            android:id="@+id/track_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/track_start_time"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingEnd="@dimen/padding_medium"
            android:paddingBottom="@dimen/padding_small"
            android:text="@{@string/end_format(track.endTimestamp)}"
            android:visibility="@{track.endTimestamp == null ? View.GONE : View.VISIBLE}"
            tools:text="End: 2020-05-25 12:00"
            tools:visibility="visible"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>