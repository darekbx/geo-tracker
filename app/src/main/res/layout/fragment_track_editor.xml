<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <org.osmdroid.views.MapView
        android:id="@+id/map"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/summary_label"
        />

    <TextView
        android:id="@+id/summary_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/map"
        app:layout_constraintBottom_toTopOf="@id/start_minus"
        android:padding="@dimen/padding_small"
        tools:text="seek_start"
        />

    <TextView
        android:id="@+id/seek_start_label"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="@string/seek_start"
        android:padding="@dimen/padding_small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/summary_label"
        app:layout_constraintBottom_toTopOf="@id/seek_end_label"
        />
    <Button
        android:id="@+id/start_plus"
        android:layout_width="@dimen/seek_button_size"
        android:layout_height="@dimen/seek_button_size"
        app:layout_constraintStart_toEndOf="@id/seek_start_label"
        app:layout_constraintTop_toTopOf="@id/seek_start"
        app:layout_constraintBottom_toBottomOf="@id/seek_start"
        android:text="-"
        />
    <SeekBar
        android:id="@+id/seek_start"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:max="100"
        app:layout_constraintStart_toEndOf="@id/start_plus"
        app:layout_constraintEnd_toStartOf="@id/start_minus"
        app:layout_constraintTop_toTopOf="@id/seek_start_label"
        app:layout_constraintBottom_toBottomOf="@id/seek_start_label"
        android:thumb="@drawable/bg_seekbar_thumb"
        tools:progress="59"
        />
    <Button
        android:id="@+id/start_minus"
        android:layout_width="@dimen/seek_button_size"
        android:layout_height="@dimen/seek_button_size"
        app:layout_constraintStart_toEndOf="@id/seek_start"
        app:layout_constraintEnd_toStartOf="@id/seek_start_value_label"
        app:layout_constraintTop_toTopOf="@id/seek_start"
        app:layout_constraintBottom_toBottomOf="@id/seek_start"
        android:text="+"
        />
    <TextView
        android:id="@+id/seek_start_value_label"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_small"
        app:layout_constraintTop_toTopOf="@id/seek_start"
        app:layout_constraintBottom_toBottomOf="@id/seek_start"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="end"
        tools:text="2590"
        />

    <TextView
        android:id="@+id/seek_end_label"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="@string/seek_end"
        android:padding="@dimen/padding_small"
        android:layout_marginTop="@dimen/padding_medium"
        android:layout_marginBottom="@dimen/padding_tiny"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/seek_start_label"
        app:layout_constraintTop_toBottomOf="@id/seek_start_label"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <Button
        android:id="@+id/end_minus"
        android:layout_width="@dimen/seek_button_size"
        android:layout_height="@dimen/seek_button_size"
        app:layout_constraintStart_toEndOf="@id/seek_end_label"
        app:layout_constraintTop_toTopOf="@id/seek_end"
        app:layout_constraintBottom_toBottomOf="@id/seek_end"
        android:text="-"
        />
    <SeekBar
        android:id="@+id/seek_end"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scaleX="-1"
        android:max="100"
        app:layout_constraintStart_toEndOf="@id/end_minus"
        app:layout_constraintEnd_toStartOf="@id/end_plus"
        app:layout_constraintTop_toTopOf="@id/seek_end_label"
        app:layout_constraintBottom_toBottomOf="@id/seek_end_label"
        android:thumb="@drawable/bg_seekbar_thumb"
        tools:progress="7"
        />
    <Button
        android:id="@+id/end_plus"
        android:layout_width="@dimen/seek_button_size"
        android:layout_height="@dimen/seek_button_size"
        app:layout_constraintStart_toEndOf="@id/seek_end"
        app:layout_constraintEnd_toStartOf="@id/seek_end_value_label"
        app:layout_constraintTop_toTopOf="@id/seek_end"
        app:layout_constraintBottom_toBottomOf="@id/seek_end"
        android:text="+"
        />
    <TextView
        android:id="@+id/seek_end_value_label"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_small"
        app:layout_constraintTop_toTopOf="@id/seek_end"
        app:layout_constraintBottom_toBottomOf="@id/seek_end"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="end"
        tools:text="70"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/map"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/padding_large"
        android:src="@drawable/ic_save"
        android:tint="@android:color/white"
        tools:backgroundTint="@color/design_default_color_primary"
        />

    <FrameLayout
        android:id="@+id/loading_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#6000"
        tools:visibility="gone"
        >
        <ProgressBar
            android:id="@+id/progress_view"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:indeterminate="false"
            android:progressDrawable="@drawable/circular_progress_bar"
            />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
