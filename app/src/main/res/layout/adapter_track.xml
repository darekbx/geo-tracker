<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View" />
        <variable name="track" type="com.darekbx.geotracker.model.Track" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/row_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/padding_medium"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:background="#1666">

        <TextView
            android:id="@+id/track_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/track_distance"
            android:gravity="start"
            android:ellipsize="end"
            android:paddingStart="@dimen/padding_medium"
            android:paddingEnd="@dimen/padding_small"
            android:text="@{track.label}"
            android:textColor="@android:color/black"
            tools:text="Label"
            />
        <TextView
            android:id="@+id/track_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/track_time"
            android:paddingEnd="@dimen/padding_small"
            android:textStyle="bold"
            android:text="@{@string/distance_format(track.distance)}"
            tools:text="10.56km"
            />
        <TextView
            android:id="@+id/track_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/track_duration"
            android:paddingEnd="@dimen/padding_small"
            android:text="@{track.startTimestamp}"
            tools:text="2020-05-25 12:00"
            app:isBroken="@{track.timeBroken}"
            />
        <TextView
            android:id="@+id/track_duration"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingEnd="@dimen/padding_medium"
            android:text="@{track.timeDifference}"
            tools:text="1h 15m 00s"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
